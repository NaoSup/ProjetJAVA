package motmagique2;


import java.util.ArrayList;
import java.util.Random;
import java.util.Scanner;


public class remain{
    public static void main(String[] args) {
        String []tabMot = {"ALLO", "BONJOUR","MANGER","BOIRE"};
        Random rand = new Random();
        int nombreAleatoire;
        String mot;
        
        
        nombreAleatoire = rand.nextInt(tabMot.length);
        mot = tabMot[nombreAleatoire];
        String motMagique; // = mot de base
        String lettre = "AZERTYUIOPQSDFGHJKLMWXCVBN";
        
        int max;
        int stop = 0;
        int min = 0;
        int ajoutdelettre = 3;
        
        
        System.out.println("Trouver le mot magique parmi cette liste de lettre" );
        
        for (int i=0; i < ajoutdelettre; i++){
            nombreAleatoire = rand.nextInt(26);
            mot += lettre.charAt(nombreAleatoire);
        }
        ArrayList<Integer> lettreprise = new ArrayList<>();
        boolean co = true;
        while (co){
            nombreAleatoire = rand.nextInt(mot.length());
            if (!(lettreprise.contains(nombreAleatoire))){
                lettreprise.add(nombreAleatoire);
                System.out.println(mot.charAt(nombreAleatoire));
                stop++;
            }
            if (stop == mot.length()){	
                co = true;
                
            }
        }
        //tester la r√©ponse de l'utilisateur = motMagique
        Scanner reponse = new Scanner(System.in);
        motMagique = reponse.nextLine();
        boolean po = true;
        while(po){
      if (motMagique == mot){
    	  po= false;
    	  System.out.println("trouve");
      } else{
    	  
    	  System.out.println("Essaie encore");
      }
        }  

    }
}

