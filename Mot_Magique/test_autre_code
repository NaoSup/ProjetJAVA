            nombreAleatoire = rand.nextInt(26);
            lettresMysteres += lettre.charAt(nombreAleatoire);
        }
        ArrayList<Integer> lettreprise = new ArrayList<>();
        boolean co = true;
        while (co){
            nombreAleatoire = rand.nextInt(lettresMysteres.length());
